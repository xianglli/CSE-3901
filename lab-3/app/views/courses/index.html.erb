<h1>Courses</h1>

<%= search_form_for @query do |f| %>
  <%= f.label :search_course_info %>
  <%= f.search_field :title_or_component_or_catalogNumber %>
  <%= f.submit %>
  <%= logger.debug "<<<<<<<<<<<<#{@query}<<<<<<<<<<<" %>
<% end %>

<%= sort_link(@query, :catalogNumber) %>

<%= tag.table do %>
  <%= tag.thead display_sort_column_headers(@query), escape_attributes: false %>
  <%= tag.tbody display_search_results(@query), escape_attributes: false %>
<% end %>


